.container {
  width: min-content;
  max-width: 1200px;
  padding: 50px;
  margin: 0 auto;
}
.content-box {
  width: min-content;
  display: flex;
}
.title {
  width: 100%;
  font-size: 18px;
  color: #333;
  text-align: center;
}
.tool-introduce {
  width: 160px;
  font-size: 16px;
  color: #000;
  padding-right: 20px;
  padding-top: 54px;
}
.content {
  width: max-content;
  display: flex;
  align-items: center;
  margin: 40px auto 0;
}
.analyze-content, .audio-content {
  width: min-content;
  display: flex;
  align-items: center;
}
.box {
  width: 200px;
  height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 30px 40px;
}
.upload-box {
  background-color: #f7e7e7;
  border: 1px solid #ccc;
  position: relative;
  overflow: hidden;
  padding: 0;
}
.upload-box:hover {
  border-color: #ff0000;
}
.upload-box:hover p {
  color: #ff0000;
}
.upload-box:hover i {
  border-color: #ff0000;
}
.upload-icon {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.upload-icon p {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
}
.upload-icon span {
  width: 40%;
  height: 40%;
  display: block;
  position: relative;
}
.upload-icon span i {
  width: 100%;
  height: 0;
  display: block;
  border: 1px dashed #ccc;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.upload-icon span i:last-child {
  width: 0;
  height: 100%;
}
.upload-box img {
  max-width: 100%;
  max-height:  100%;
  display: block;
}
.upload-box input {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  cursor: pointer;
  opacity: 0;
}
.info-box {
  flex-direction: column;
}
.input-box {
  flex-direction: column;
  padding: 0 20px;
}
.box.input-box > p {
  text-align: left;
  font-size: 14px;
}
.input-box textarea {
  width: 100%;
  height: 76px;
  font-size: 16px;
  line-height: 20px;
  padding: 4px 6px;
  box-sizing: border-box;
  font-size: 14px;
  text-align: left;
}
.audio-box {
  flex-direction: column;
}
.box > p {
  width: 100%;
  line-height: 26px;
  font-size: 18px;
  margin-bottom: 8px;
  text-align: center;
}
.box button {
  width: 100%;
  height: 40px;
  font-size: 16px;
  margin-bottom: 20px;
  cursor: pointer;
}
.box button[disabled] {
  cursor: no-drop;
}
.box button:last-child {
  margin-bottom: 0;
}
.box .line {
  width: 100%;
  height: 0;
  border-bottom: 1px solid #ccc;
  margin: 6px 0;
}
.transform-arrow {
  width: 60px;
  height: 60px;
  position: relative;
  margin: 0 20PX;
}
.transform-arrow span:first-child {
  width: 50%;
  height: 50%;
  display: block;
  border-top: 2px solid #666;
  border-right: 2px solid #666;
  position: absolute;
  top: 50%;
  right: 14%;
  transform: rotateZ(45deg) translateY(-50%);
  transform-origin: top center;
}
.transform-arrow span:last-child {
  width: 60%;
  height: 30%;
  display: block;
  border-top: 2px solid #666;
  border-bottom: 2px solid #666;
  position: absolute;
  top: 50%;
  left: 6%;
  transform: translateY(-50%);
}